msgstr ""

#. type: delimited block . 4
#: documentation/content/en/books/porters-handbook/special/_index.adoc:1108
#, no-wrap
msgid ""
"OPTIONS_DEFINE=\t\tNLS\n"
"OPTIONS_SUB=\t\tyes\n"
msgstr ""

#. type: delimited block . 4
#: documentation/content/en/books/porters-handbook/special/_index.adoc:1111
#, no-wrap
msgid ""
"NLS_USES=\t\tgettext\n"
"NLS_CONFIGURE_ENABLE=\tnls\n"
msgstr ""

#. type: Plain text
#: documentation/content/en/books/porters-handbook/special/_index.adoc:1116
msgid "Or using the older way of using options:"
msgstr "O usando la forma anterior de usar las opciones:"

#. type: delimited block . 4
#: documentation/content/en/books/porters-handbook/special/_index.adoc:1122
#, no-wrap
msgid "OPTIONS_DEFINE=\t\tNLS\n"
msgstr ""

#. type: delimited block . 4
#: documentation/content/en/books/porters-handbook/special/_index.adoc:1124
#, no-wrap
