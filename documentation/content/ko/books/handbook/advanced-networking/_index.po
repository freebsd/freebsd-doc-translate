"  eap=PEAP <.>\n"
"  identity=\"test\" <.>\n"
"  password=\"test\" <.>\n"
"  ca_cert=\"/etc/certs/cacert.pem\" <.>\n"
"  phase1=\"peaplabel=0\" <.>\n"
"  phase2=\"auth=MSCHAPV2\" <.>\n"
"}\n"
msgstr ""
